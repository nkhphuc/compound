{
  "name": "@compound/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Compound Chemistry Data Manager - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:migrate": "tsx src/config/migrate.ts",
    "db:seed": "tsx src/config/seed.ts"
  },
  "dependencies": {
    "@compound/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-fileupload": "^1.5.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2"
  }
}
